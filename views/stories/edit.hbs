<h1>Edit Story Pages</h1>
<div class='row'>
  <form action='/stories/{{story.id}}?_method=PUT' method='post' class='col s12'>
    <input type='hidden' name='_method' value='PUT'>
    <div class='row'>
      <div class='input-field'>
        <input type='text' name='title' value='{{story.title}}'>
        <label for='title'>Title</label>
      </div>
    </div>

    <div class='row'>
      <div class='input-field'>
        <select name='status'>
          {{#select story.status}}
            <option value='public'>Public</option>
            <option value='private'>Private</option>
            <option value='unpublished'>Unpublished</option>
          {{/select}}
        </select>
        <label for='status'>Status</label>
      </div>
    </div>

    <div class='row'>
      <p>
        <label for='filled-in-box'>
          <input type='checkbox' name='allowComments' class='filled-in' id='filled-in-box' {{#if story.allowComments}} checked='checked' {{/if}}/>
          <span>Allow Comment</span>
        </label>
      </p>
    </div>

    <div class='row'>
      <div class='input-field'>
        <h5>Tell Us Your Story:</h5>
        <textarea name='body1' class='body1' rows='10' cols='80'>{{story.body}}</textarea>
      </div>
    </div>

    <input type='submit' value='Save' class='btn'>
  </form>
</div>
