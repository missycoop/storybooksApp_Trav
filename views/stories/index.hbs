<!-- storing private stories also -->
<h1>Stories</h1>
<div class='row'>
  {{#each stories}}
    <div class='col s12 m5'>
      <div class='card'>
        <div class='card-image'>
          {{#if user}}
            <!-- ../user.id = to get outside scope | global scope id -->
            {{{editIcon user.id ../user.id id}}}
          {{/if}}
        </div>
        <div class='card-content center-align'>
          <h5>{{title}}</h5>
          <!-- Using helpers method -->
          <p class='story-text'>{{stripTags (truncate body 100)}}</p>
          <br>
          <div class='chip'>
            <img src='{{user.image}}' alt='Contact Person'>
            <a href='/stories/user/{{user.id}}'>{{user.firstName}} {{user.lastName}}</a>
          </div>
        </div>
        <div class='card-action center-align'>
          <a class='btn grey' href='/stories/show/{{id}}'>Read More</a>
        </div>
      </div>
    </div>
  {{else}}
    <p>No Stories found</p>

  {{/each}}
</div>
